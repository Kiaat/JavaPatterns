public class Solid_RightSide_Arrow {
	@SuppressWarnings("resource")
	public static void main(String[] args) {
		System.out.print("Enter number of rows: ");
		Scanner sr = new Scanner(System.in);
		int n = sr.nextInt();
		// for printing upper part of the arrow
		for (int i = 1; i < n; i++) {

			// To give space before printing stars in upper part of arrow
			for (int j = 0; j < i; j++) {
				System.out.print(" ");
			}

			// To print stars in upper part of the arrow
			for (int k = 0; k < i; k++) {
				System.out.print("*");
			}
			System.out.println();
		}

		// for printing lower part of the arrow
		for (int i = 0; i < n; i++) {

			// To give space before printing stars in lower part of arrow
			for (int j = 0; j < n - i; j++) {
				System.out.print(" ");
			}

			// To print stars in lower part of the arrow
			for (int k = 0; k < n - i; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
}

